---
import { DropdownMenuButton } from './DropdownMenuButton'
const links = [
	{ label: "Služby", path: '/#sluzby' },
	{ label: "Ceník", path: '/cenik' },
	{ label: "O nás", path: '/#kontakt' },
	{ label: "Kontakt", path: '/#kontakt' }
]
---
<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="canonical" href="https://www.fyzioterapiepodlipami.cz/">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Sofia+Sans:wght@400;500;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow">
		<meta name="description" content="Nabízíme komplexní fyzioterapeutické služby v Mladé Boleslavi. Pomáháme s bolestmi zad, kloubů a svalů.">
		<meta name="geo.region" content="CZ-20"> <!-- CZ is the country code, 20 is the region code -->
		<meta name="geo.placename" content="Mladá Boleslav">
		<meta name="ICBM" content="50.42064, 14.9056">
		<title>Fyzioterapie pod lipami</title>
	</head>r
	<body>
		<nav>
			<div id="navigation">
				<a href="/"><img alt="logo" id="logo" height="54" src="/logo-transparent.png"/></a>
				<div class="nav-links">{links.map(link => <a class="link" href={link.path}>{link.label}</a>)}</div>
				<div id="menu"><DropdownMenuButton client:only="react" items={links}/></div>
			</div>
		</nav>
		<slot />
	</body>
</html>

<style>
	a {
		all: unset;
		cursor: pointer;
	}
	a:hover {
		color: var(--green-light);
	}
	:root {
		--green-dark: #055e69;
		--green-light: #75b5af;
		--green-lighter: #B2DBE5;
		--background-light-blue: #e0eaef;
		--background-lighter-blue: #f0fcfd;
		--salmon-light: #FFD8CC;
		--salmon-lighter: #ffe3dc;
		--salmon-dark: #d4856a;
		--salmon-darker: #8f543f;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: Sofia Sans, sans-serif;
		scroll-behavior: smooth;
	}
	nav {
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 100;
		background-color: rgba(255, 255, 255, 0.47);
		backdrop-filter: blur(10px);
	}
	#navigation {
		display: flex;
		padding: 6px 60px 6px 6px;
		justify-content: space-between;
		gap: max(12vw, 120px);
		font-size: 24px;
		align-items: center;
		color: var(--green-dark);
		font-weight: 500;
	}
	#menu {
		display: none;
	}

	#logo {
		padding: 6px;
		cursor: pointer;
	}
	.nav-links {
		display: flex;
		justify-content: space-between;
		flex: 1;
		max-width: 800px;
	}

	@media (max-width: 800px) {
		#menu {
			display: initial;
		}
		#navigation {
			padding: 6px;
			gap: 0;
		}
		.nav-links {
			display: none;
		}
	}
</style>
