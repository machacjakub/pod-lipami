<style>
    h2 {
        text-align: center;
        font-size: 28px;
        color: var(--green-dark);
    }
    table {
        margin: 0 auto;
        font-size: 18px;
        border-collapse: collapse;
        background-color: var(--green-lighter);
    }
    td {
        border: solid white;
        border-width: 3px 0 3px 0;
        padding: 10px 30px 10px 10px;
    }
    td.price {
        text-align: right;
        border-width: 3px 0 3px 3px;
