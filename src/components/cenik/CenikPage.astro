        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
    }
    p {
        font-size: 18px;
    }
    .samoplatce {
        font-size: 20px;
    }
    #blurred-line {
        width: 20px;
        margin-right: 40px;
        background-color: var(--green-light);
        filter: blur(5px);
        flex-shrink: 0;
    }
    #cenik-pro-samoplatce {
        margin-top: 50px;
    }
    button {
        background-color: var(--salmon-light);
        padding: 12px 20px;
        font-family: Sofia Sans, sans-serif;
        border: none;
        border-radius: 18px;
        font-size: 20px;
        font-weight: 600;
        box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.34);
        cursor: pointer;
        color: var(--salmon-darker);
