<section id="hero-wrapper">
    <div id="hero">
        <div id="blurred-line"/>
        <div>
            <h1>Fyzioterapie a kraniosakrální terapie</h1>
            <h4>Mladá Boleslav</h4>
            <a href="#kontakt"><button client:only id="reservation-button">Rezervovat termín</button></a>
        </div>
        <img id="hero-image-desktop" alt="Hero image" src="/hero-img.png" />
    </div>
    <img id="hero-image-phone" alt="Hero image" src="/hero-img.png" />
</section>
<style>
    h1 {
        color: var(--green-dark);
        font-size: 48px;
        margin-bottom: 16px;
    }
    h4 {
        color: var(--green-light);
        font-size: 28px;
        font-weight: normal;
        margin: 16px auto 32px auto;
    }
    button {
        background-color: var(--salmon-light);
        padding: 15px 24px;
        font-family: Sofia Sans, sans-serif;
        border: none;
        border-radius: 18px;
        font-size: 22px;
        font-weight: 600;
        box-shadow: 4px 4px 6px rgba(0, 0, 0, 0.25);
        cursor: pointer;
    }
    #hero-wrapper {
        height: 90vh;
        display: flex;
        align-items: center;
    }
    #hero {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 50px;
        margin: 60px 0 30px 0;
        background-image: linear-gradient(white, var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), white);
        padding: 30px 0 30px 50px;
    }
    #hero-image-desktop {
        height: 400px;
        border-radius: 20px 0 0 20px ;
        border: var(--green-light ) solid;
        border-width: 10px 0 10px 10px;
    }
    #hero-image-phone {
        display: none;
    }
    #blurred-line {
        width: 20px;
        height: 420px;
        margin-right: 40px;
        background-color: var(--green-light);
        filter: blur(5px);
        flex-shrink: 0;
    }
    #services {
        height: 600px;
        background-color: darkgreen;
        width: 100vw;
    }


    @media (max-width: 1150px) {
        #hero-wrapper {
            margin-top: 40px;
            display: flex;
            flex-direction: column;
            align-items: initial;
            height: fit-content;
        }
        #hero {
            padding-right: 100px;
            justify-content: left;
        }
        #hero-image-desktop {
            display: none;
        }
        #hero-image-phone {
            display: initial;
            margin: auto;
            width: 90vw;
            border-radius: 20px;
            border: 5px var(--green-light ) solid;
        }
        h1 {
            font-size: 38px;
            margin-bottom: 10px;
        }
        h4 {
            font-size: 22px;
            margin: 10px auto 20px auto;
        }
        button {
            padding: 12px 18px;
            font-size: 20px;
        }
        #hero {
            gap: 20px;
            padding: 30px 5% 30px 5%;
        }
        #blurred-line {
            width: calc(10px + 1%);
            height: 360px;
            margin-right: 10%;
            flex-shrink: 0;
        }
    }
</style>