<style>
    img {
        height: 360px;
        z-index: 10;
        margin-top: 14px;
        box-shadow: -4px 4px 8px rgba(0, 0, 0, 0.3);
    }
    #background {
        position: absolute;
        height: 380px;
        width: 80vw;
        left: 0;
        background-color: var(--background-light-blue);
        border: solid var(--green-light);
        border-width: 4px 4px 4px 0;
        border-radius: 0 80px 80px 0;
        z-index: 0;
    }
    #flex {
        display: flex;
        gap: 40px;
    }
    #information {
        padding: 40px 80px 40px 120px;
        z-index: 10;
        margin: auto 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    h3 {
        color: var(--salmon-dark);
        font-size: 26px;
        margin: 0;
        z-index: 10;
    }
    p {
        font-size: 18px;
        z-index: 10;
        line-height: 26px;
    }
    button {
        padding: 8px 20px;
        font-size: 18px;
        background-color: var(--salmon-light);
        font-family: Sofia Sans, sans-serif;
        border: none;
        border-radius: 8px;
        box-shadow: 4px 4px 6px rgba(0, 0, 0, 0.25);
        width: min-content;
    }
</style>