---
import {DropdownMenuButton} from '../../layouts/DropdownMenuButton'
---
<blockquote>
    <div>
        <slot/>
    </div>
</blockquote>
<style>
    blockquote {
        display: flex;
        width: 900px;
        gap: 20px;
        font-size: 24px;
        color: var(--salmon-dark);
        margin: 0 auto 50px;
        line-height: 34px;
        max-width: 80%;
    }
    @media (max-width: 1150px) {
        blockquote {
            margin-top: 60px;
            font-size: 20px;
        }
    }
</style>