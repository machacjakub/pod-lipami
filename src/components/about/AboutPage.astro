---
import {therapists} from './therapists'
import TherapistLeft from "./TherapistLeft.astro";
import TherapistRight from "./TherapistRight.astro";
---
<div class="page">
    <h1>Náš tým</h1>
    <div>
        {therapists.map((therapist, i) =>  {
            if(i%2 === 1) {
                return <TherapistLeft therapist={therapist}/>
            }
            return <TherapistRight therapist={therapist}/>
        })
        }
    </div>
</div>
<style>
    .page {
        min-height: 100vh;
        margin: 80px auto;
        max-width: 1500px;
        padding: 0 0 100px 0 ;
        background-image: linear-gradient(var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), var(--background-light-blue), white);
    }
    h1 {
        color: var(--green-dark);
        text-align: center;
        background-image: linear-gradient(white, var(--background-light-blue));
        padding-top: 60px;
    }
</style>